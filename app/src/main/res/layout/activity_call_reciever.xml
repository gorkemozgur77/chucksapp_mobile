<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/etoBlue"
    tools:context=".modules.call.CallReceiverActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/declineCallFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:backgroundTint="@color/red"
        android:clickable="true"
        app:backgroundTint="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/acceptCallFAB"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_call_end_24"
        app:tint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/acceptCallFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:clickable="true"
        app:backgroundTint="@color/green"
        app:layout_constraintBottom_toBottomOf="@+id/declineCallFAB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/declineCallFAB"
        app:srcCompat="@drawable/ic_baseline_call_24"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/callerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="GÃ¶rkem"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Accept"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/acceptCallFAB"
        app:layout_constraintStart_toStartOf="@+id/acceptCallFAB"
        app:layout_constraintTop_toBottomOf="@+id/acceptCallFAB" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Decline"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/declineCallFAB"
        app:layout_constraintStart_toStartOf="@+id/declineCallFAB"
        app:layout_constraintTop_toBottomOf="@+id/declineCallFAB" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="is Calling"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/callerTextView"
        app:layout_constraintStart_toStartOf="@+id/callerTextView"
        app:layout_constraintTop_toBottomOf="@+id/callerTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>